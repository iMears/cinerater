<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @review, url: {action: "create"}, html: {class: "form-group form-fresh"} do |f| %>
        <%= f.text_field :movie_title, placeholder: "* Movie Title", class: "form-control form-fresh" %>
        <%= f.text_field :email, placeholder: "* Email", class: "form-control form-fresh" %>
        <%= f.text_field :rating, placeholder: "* Rating", class: "form-control form-fresh" %>
        <%= f.text_area :comment, placeholder: "* Comment", class: "form-control textarea-fresh" %>
        <br>
        <%= f.submit "Submit Review", class: "btn form-fresh btn-primary form-control" %>
      <% end %>
    </div>
  </div>
</div>